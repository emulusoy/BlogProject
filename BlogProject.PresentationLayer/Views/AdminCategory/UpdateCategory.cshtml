@model BlogProject.EntityLayer.Entities.Category

@{
    Layout = null;
}



<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />



<div class="container">
    <br />
    <form method="post" asp-action="UpdateCategory">
        <input type="hidden" asp-for="CategoryId" />

        <label>
            Category Name
        </label>
		<input type="text" asp-for="CategoryName" class="form-control" placeholder="Update Category Name" required />

		<br />
		<button type="submit" class="btn btn-outline-primary">Update Category</button>
    </form>

</div>
